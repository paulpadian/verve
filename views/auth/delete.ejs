<script>
    function ConfirmDelete() {
        var x = confirm("Are you sure you want to delete?");
        if (x)
            return true;
        else
            return false;
    }
</script>

<div class="container">
    <h1>Manage Users:</h1>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Type</th>
                <th scope="col">Name:</th>
                <th scope="col">Email:</th>
                <th scope="col">About User:</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <% users.forEach((user) => { %>
        <tbody>
            <th scope="row"><% if(user.dataValues.admin === "1"){ %>
                Admin
                <% } else { %>
                Client
                <% } %>
            </th>
            <td><%- user.dataValues.name %></td>
            <td><%- user.dataValues.email %></td>
            <td><%- user.dataValues.bio %></td>
            <td>
                <form method="POST" action="/auth/delete/<%-user.dataValues.id%>">
                    <button type="submit" class="btn btn-danger btn-sm"
                        Onclick="return ConfirmDelete();">Delete</button>
                </form>
            </td>
        </tbody>
        <% }) %>
    </table>
</div>