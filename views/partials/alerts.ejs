
<% if (alerts.error) { %>
    <% alerts.error.forEach(function(message) { %>
        <div style="background: red; color: white;">
            <div class="container">
            <%= message %>
            </div>
        </div>
    <% }); %>
<% } else if (alerts.success) { %>
    <% alerts.success.forEach(function(message) { %>
        <div style="background: green; color: white;">
            <div class="container">
                <%= message %>
            </div>
        </div>
    <% }); %>
<% } %>
